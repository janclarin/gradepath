<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_semester_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-thin"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_light"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_semester_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_tab"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@color/theme_secondary_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_semester_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_semester_label"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_semester_information_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/tv_semester_information"
        android:layout_alignTop="@id/tv_semester_information"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/tv_semester_information"
        android:gravity="bottom"
        android:textAllCaps="true"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/home/jan/Dropbox/android/workspace/GradePath/GradePath/src/main/res/layout/fragment_list_semester_item.xml -->