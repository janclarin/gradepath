<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <CheckBox
        android:id="@+id/cb_recent_task_completed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/tv_recent_task_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/cb_recent_task_completed"
        android:singleLine="true"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recent_task_due_date_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_recent_task_name"
        android:layout_toLeftOf="@id/cb_recent_task_completed"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp" />

</RelativeLayout><!-- From: file:/home/jan/Dropbox/android/workspace/GradePath/GradePath/src/main/res/layout/fragment_list_task_item.xml -->