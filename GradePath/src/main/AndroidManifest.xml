<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.janclarin.gradepath">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Gradepath">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CourseEditActivity"
            android:label="@string/title_activity_edit_course"></activity>
        <activity
            android:name=".activity.CourseDetailActivity"
            android:label="@string/title_activity_detail_course"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.janclarin.gradepath.activity.MainActivity" />
        </activity>

        <service android:name=".service.ReminderService" />
        <service android:name=".service.NotifyService" />

        <receiver android:name=".receiver.RemindersOnBoot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.ListFragmentActivity"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.janclarin.gradepath.activity.MainActivity" />
        </activity>
    </application>

</manifest>
