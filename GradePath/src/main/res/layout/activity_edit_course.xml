<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".activities.NewCourseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_course_information"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_course_information" />

        <!-- Course Information -->
        <ImageButton
            android:id="@+id/btn_add_semester"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_course_information"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/cd_add_button"
            android:src="@drawable/ic_grade_component_add" />

        <Spinner
            android:id="@+id/spn_semester"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_course_information"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/btn_add_semester"
            android:paddingRight="16dp" />

        <EditText
            android:id="@+id/et_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spn_semester"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_course_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_instructor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_course_name"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_instructor"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_instructor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_instructor_name"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_email_address"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_grade_components_header"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_instructor_email"
            android:layout_marginTop="16dp"
            android:text="@string/grade_components" />

        <LinearLayout
            android:id="@+id/ll_grade_components"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grade_components_header"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle" />

        <Button
            android:id="@+id/btn_add_grade_component"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/ll_grade_components"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_button"
            android:contentDescription="@string/cd_add_button"
            android:gravity="center"
            android:text="@string/add_grade_component"
            android:textAllCaps="true"
            android:textColor="@drawable/color_white_opacity"
            android:textSize="14sp" />

