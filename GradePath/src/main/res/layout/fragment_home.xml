<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="8dp"
        android:text="Monday, July 21"
        android:textColor="@color/theme_primary_color"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lv_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:drawSelectorOnTop="true"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="32dp"
        android:scrollbarStyle="outsideOverlay" />

    <TextView
        android:id="@+id/tv_list_empty"
        style="@style/emptyListTextView" />

    <ImageButton
        android:id="@+id/btn_show_add_options"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_list_item" />

    <ImageButton
        android:id="@+id/btn_add_grade"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/btn_show_add_options"
        android:layout_alignRight="@id/btn_show_add_options"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_grade"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_add_reminder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/btn_add_grade"
        android:layout_alignRight="@id/btn_show_add_options"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_reminder"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_add_grade"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/btn_add_grade"
        android:layout_alignTop="@id/btn_add_grade"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/btn_add_grade"
        android:gravity="center_vertical"
        android:text="@string/grade"
        android:textColor="@color/theme_primary_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_add_reminder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/btn_add_reminder"
        android:layout_alignTop="@id/btn_add_reminder"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/btn_add_reminder"
        android:gravity="center_vertical"
        android:text="@string/reminder"
        android:textColor="@color/theme_primary_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>
