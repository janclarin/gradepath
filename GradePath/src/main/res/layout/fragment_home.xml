<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <ListView
        android:id="@+id/lv_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="16dp"
        android:paddingBottom="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:scrollbarStyle="outsideOverlay" />

    <ImageButton
        android:id="@+id/btn_show_add_options"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_item" />

    <ImageButton
        android:id="@+id/btn_add_course"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@id/btn_show_add_options"
        android:layout_alignRight="@id/btn_show_add_options"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_course"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_add_grade"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/btn_show_add_options"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/btn_show_add_options"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_grade"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_add_reminder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@id/btn_add_grade"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/btn_add_course"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_add_reminder"
        android:visibility="invisible" />

</RelativeLayout>
