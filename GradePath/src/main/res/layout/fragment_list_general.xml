<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListCourseFragment">

    <ListView
        android:id="@+id/lv_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="true"
        android:padding="8dp"
        android:scrollbarStyle="outsideOverlay" />

    <TextView
        android:id="@+id/tv_list_empty"
        style="@style/emptyListTextView" />

    <ImageButton
        android:id="@+id/btn_add_item"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="@string/cd_add_button"
        android:padding="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_list_item" />

</FrameLayout>
